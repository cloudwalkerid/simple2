<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    android:layout_marginTop="?attr/actionBarSize">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <LinearLayout
            android:id="@+id/ket_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_item_question"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">
            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keterangan"
                android:textStyle="bold"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/ket"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="14dp"
                android:layout_marginLeft="5dp"
                android:inputType="textMultiLine"/>
            <TextView
                android:id="@+id/ket_error"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Provinsi"
                android:textStyle="italic"
                android:gravity="right"
                android:textColor="@color/error_1"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/status_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_item_question"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">
            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apakah entrian ini sudah selesai?"
                android:textStyle="bold"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginLeft="5dp"/>

            <RadioGroup
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp">
                <RadioButton android:id="@+id/status_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ya, entrian sudah lengkap" />
                <RadioButton android:id="@+id/status_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belum, dan akan dilanjutkan di lain waktu" />

            </RadioGroup>
            <TextView
                android:id="@+id/status_error"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Provinsi"
                android:textStyle="italic"
                android:gravity="right"
                android:textColor="@color/error_1"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/submit_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:background="@drawable/bg_item_question"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">
            <TextView
                android:id="@+id/error_simpan"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Provinsi"
                android:textStyle="italic"
                android:gravity="center"
                android:textColor="@color/error_1"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/error_all"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Provinsi"
                android:textStyle="italic"
                android:gravity="center"
                android:textColor="@color/error_1"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:visibility="visible"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/simpan_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:text="Simpan"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/kirim_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/web_info"
                android:text="Kirim"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"/>

        </LinearLayout>


    </LinearLayout>
</ScrollView>
