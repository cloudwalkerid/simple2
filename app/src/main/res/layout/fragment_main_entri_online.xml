<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="left">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/logo"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/name_main_frag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Data Online"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nunito_regular"
                android:layout_marginRight="40dp"/>
            <ImageButton
                android:id="@+id/filter_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_filter"
                android:src="@drawable/ic_baseline_filter_list_24"
                android:layout_gravity="right"
                android:layout_marginLeft="-40dp"
                />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <id.go.bps.sulbar.simple2.adapter.MultiSwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="55dp">
        <LinearLayout
            android:id="@+id/holder_entri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="20dp">
            <LinearLayout
                android:id="@+id/prov_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_item_question">
                <Spinner
                    android:id="@+id/select_spinner"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/online_tidak_ada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tidak Ada Data"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-10dp"
                android:background="@drawable/backgroud_entri_on_off"
                android:layout_marginBottom="5dp"
                android:visibility="visible"
                android:layout_marginTop="5dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/online_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </id.go.bps.sulbar.simple2.adapter.MultiSwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
